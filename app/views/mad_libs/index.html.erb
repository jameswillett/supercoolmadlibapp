<p id="notice"><%= notice %></p>

<h1>Mad Libs</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mad_libs.each do |mad_lib| %>
      <tr>
        <td><%= mad_lib.text %></td>
        <td><%= link_to 'Show', mad_lib %></td>
        <td><%= link_to 'Edit', edit_mad_lib_path(mad_lib) %></td>
        <td><%= link_to 'Destroy', mad_lib, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mad Lib', new_mad_lib_path %>
